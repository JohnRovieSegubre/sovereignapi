# ==============================================
# Sovereign Intelligence API - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values.
# NEVER commit the .env file!
# ==============================================

# --- GATEWAY SERVER (Required) ---
MINT_SECRET=your_admin_secret_here
OPENROUTER_API_KEY=sk-or-v1-your_key_here
ALBY_ACCESS_TOKEN=your_alby_token_here

# --- x402 HYBRID PAYMENT (New Phase 10) ---
ENABLE_X402=true
X402_WALLET_ADDRESS=0xYOUR_BASE_WALLET_ADDRESS
X402_FACILITATOR_URL=https://api.cdp.coinbase.com/platform/v2/x402
# X402_CDP_API_KEY=your_cdp_key (Optional, recommended for production)

# --- POLYGON WATCHER (Required for Prepay) ---
MY_WALLET_ADDRESS=0xYOUR_POLYGON_WALLET_ADDRESS
POLYGON_RPC=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# --- SDK / CLIENT (Required for agents) ---
GATEWAY_URL=http://YOUR_SERVER_IP:8000/v1
GATEWAY_WALLET=0xYOUR_POLYGON_WALLET_ADDRESS
SOVEREIGN_API_KEY=sk-sov-your_key_here

# --- OPTIONAL ---
AGENT_PRIVATE_KEY=0xYOUR_AGENT_WALLET_PRIVATE_KEY
MOCK_MODE=0
ENVIRONMENT=DEVELOPMENT
