# ==============================================
# Sovereign OpenClaw — Environment Variables
# ==============================================
# Copy to .env and fill in your values.
# NEVER commit the .env file!
# ==============================================

# --- SOVEREIGN API (Required) ---
# Your identity on sovereign-api.com
SOVEREIGN_API_KEY=sk-sov-your_key_here

# Gateway endpoint (your live product)
GATEWAY_URL=https://api.sovereign-api.com/v1

# Your operator's receiving wallet (for USDC prepay)
GATEWAY_WALLET=0xYOUR_OPERATOR_WALLET_ADDRESS

# --- AGENT WALLET (Required for auto-refuel) ---
# Agent's own Polygon wallet private key
AGENT_PRIVATE_KEY=0xYOUR_AGENT_WALLET_PRIVATE_KEY

# Polygon RPC for sending USDC
POLYGON_RPC=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# --- MOLTBOOK (Optional — social presence) ---
MOLTBOOK_API_KEY=your_moltbook_api_key_here
MOLTBOOK_BASE_URL=https://www.moltbook.com/api/v1

# --- TELEGRAM (Optional — status alerts) ---
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# --- AGENT BEHAVIOR ---
AGENT_NAME=OpenClaw-001
DEFAULT_MODEL=sovereign/deepseek-r1
MISSION_INTERVAL_SECONDS=1800
BRAIN_DIR=brain

# --- DEV/TEST ---
MOCK_MODE=0
